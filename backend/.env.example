# Path of Exile session cookies (required)
POESESSID=your_session_id_here
CF_CLEARANCE=your_cloudflare_clearance_here

# ============================================================================
# Cache Settings
# ============================================================================

# Time in seconds before cache expires and fresh data is fetched (default: 900 = 15 minutes)
# Lower values = fresher data but more API calls
# Higher values = less API calls but staler data
CACHE_TTL_SECONDS=900

# ============================================================================
# Historical Price Tracking
# ============================================================================

# How many hours of price history to retain (default: 168 = 7 days)
# Used for trend calculation, sparklines, and price history endpoint
# Database will automatically clean up snapshots older than this period
HISTORY_RETENTION_HOURS=168

# Maximum number of snapshots to keep per currency pair (default: 100)
# Prevents memory issues with very long-running processes
HISTORY_MAX_POINTS=100

# Number of points to downsample for sparkline display (default: 30)
# Sparklines use this many evenly-spaced points from full history
SPARKLINE_POINTS=30

# ============================================================================
# Rate Limiter Settings
# ============================================================================

# Ratio (0-1) above which soft throttle kicks in (default: 0.6 = 60%)
# When API usage exceeds this threshold, requests are slowed down
# Lower values = more conservative (safer but slower)
# Higher values = more aggressive (faster but riskier)
POE_SOFT_RATIO=0.6

# Fraction of remaining window to sleep for soft throttle (default: 0.1 = 10%)
# Higher values = more aggressive throttling, lower risk of hitting limits
# Example: If 100s remain in window, sleep for 10s before next request
POE_SOFT_SLEEP_FACTOR=0.1

# ============================================================================
# Logging
# ============================================================================

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL (default: INFO)
# DEBUG: Very verbose, shows all cache operations and API calls
# INFO: Normal operation logs
# WARNING: Only warnings and errors
LOG_LEVEL=INFO
